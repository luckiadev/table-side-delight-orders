# ============================================================================
# ENVIRONMENT VARIABLES TEMPLATE
# Table-Side Delight Orders - Casino Ordering System
# ============================================================================
# Copy this file to .env and fill in your actual values
# IMPORTANT: Never commit .env to version control
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these values from your Supabase project settings:
# Dashboard -> Project Settings -> API
# ============================================================================

# Supabase Project URL
# Example: https://your-project.supabase.co
VITE_SUPABASE_URL=https://your-supabase-url.supabase.co

# Supabase Anonymous/Public Key (safe to use in client-side code)
# This is your "anon" public key from Supabase
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Application Environment (development, staging, production)
VITE_APP_ENV=development

# Application Name
VITE_APP_NAME=Table-Side Delight Orders

# Application Version
VITE_APP_VERSION=1.0.0

# ============================================================================
# AUTHENTICATION CONFIGURATION
# ============================================================================
# This application now uses Supabase Auth for authentication
# No hardcoded credentials needed!
# Create admin users directly in Supabase Dashboard:
# Authentication -> Users -> Add User
# ============================================================================

# Note: Authentication is now handled by Supabase Auth
# No additional environment variables needed for authentication

# ============================================================================
# REACT QUERY CONFIGURATION (Optional)
# ============================================================================

# React Query cache time in milliseconds (default: 5 minutes)
VITE_QUERY_CACHE_TIME=300000

# React Query stale time in milliseconds (default: 30 seconds)
VITE_QUERY_STALE_TIME=30000

# React Query refetch interval in milliseconds (0 = disabled)
VITE_QUERY_REFETCH_INTERVAL=0

# ============================================================================
# FEATURE FLAGS (Optional)
# ============================================================================

# Enable debug mode (shows console logs)
VITE_DEBUG_MODE=true

# Enable performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=false

# ============================================================================
# NOTES
# ============================================================================
# - All client-side environment variables MUST start with VITE_
# - Restart the development server after changing these values
# - Use import.meta.env.VITE_VARIABLE_NAME to access in code
# - Never expose sensitive keys (use ANON key only, not SERVICE key)
# ============================================================================
